<div class="container-fluid">
  <p id="notice"><%= notice %></p>

  <h1 class="center-text">Listing Products</h1>


  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Image url</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.description %></td>
            <td><%= product.image_url %></td>
            <td><%= link_to 'Show', product, :class => "btn btn-link" %></td>
            <td><%= link_to 'Edit', edit_product_path(product), :class => "btn btn-link" %></td>
            <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-link" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <br>

  <div class="col-md-10, col-md-offset-1">
    <%= link_to 'New Product', new_product_path, :class => "btn btn-primary", :style => "color: white" %>
  </div>
</div>